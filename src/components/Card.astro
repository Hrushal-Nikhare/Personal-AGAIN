<style>
  figure {
    display: grid;
    border-radius: 1rem;
    overflow: hidden;
    text-align: center;
    cursor: pointer;
  }
  figure > * {
    grid-area: 1/1;
    transition: 0.4s;
  }
  figure figcaption {
    display: grid;
    align-items: end;
    font-size: 2.3rem;
    font-weight: bold;
    color: #000000;
    padding: 0.75rem;
    padding-bottom: 15%;
    background: var(--c, #0009);
    clip-path: inset(0 var(--_i, 100%) 0 0);
    -webkit-mask: linear-gradient(#000 0 0), linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    -webkit-mask-clip: text, padding-box;
  }
  figure:hover figcaption {
    --_i: 0%;
  }
  figure:hover img {
    transform: scale(1.2);
  }
  figure figcaption {
    -webkit-mask: none;
    color: #fff;
  }
</style>
<figure>
  <img src={image} />
  <figcaption>{title}<br />{description}</figcaption>
</figure>
